{
  "manifest_version": 2,
  "name": "Better Canvas",
  "description": "Adds dark mode and other features to the Canvas Instructure website.",
  "version": "2.4.0",
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon/icon-19.png",
      "38": "icon/icon-38.png"
    },
    "default_popup": "html/popup.html",
    "default_title": "Better Canvas"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/*",
        "https://*.edu/*",
        "https://*.ca/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_end"
    }, 
    {
    "all_frames": false,
     "js": ["js/start.js"],
     "matches": [
       "https://*.instructure.com/*",
       "https://*.edu/*",
       "https://*.ca/*"
      ],
     "run_at": "document_start"
   }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "css/dark.css"
  ]
}
